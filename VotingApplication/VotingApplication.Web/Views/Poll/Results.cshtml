<div layout="row" ng-controller="ResultsController">

    <div flex-gt-md="50" flex-md="80" flex-sm="90"
         offset-gt-md="25" offset-md="10" offset-sm="5">

        <h1 class="md-display-1">Results</h1>

        <md-content layout="column">
            <md-card>
                <md-card-content flex layout layout-align="center center">
                    <h1 class="md-headline">Current winner{{winners.length > 1 ? 's' : ''}}: <span ng-repeat="winner in winners">{{($index > 0 ? ', ' : '') + winner}}</span></h1>
                </md-card-content>
            </md-card>
            <md-card flex layout="row">
                <md-card-content flex>
                    <div google-chart chart="resultsBarChart" flex></div>
                </md-card-content>
            </md-card>
            <md-card flex layout="row">
                <md-card-content flex>
                    <div results-table result-breakdown="results" flex></div>
                </md-card-content>
            </md-card>
        </md-content>
    </div>
</div>