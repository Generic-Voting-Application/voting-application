<div class="dialog-box-small dialog-content centered">
    <form name="loginForm" ng-submit="loginAccount(loginForm)">
        <div class="form-section-block centered">
            <label for="email">Email</label>
            <input autofocus ng-required class="form-input" type="email" id="email" placeholder="user@example.com" ng-model="loginForm.email">

            <label for="password">Password</label>
            <input type="password" ng-required class="form-input" id="password" placeholder="Password" ng-model="loginForm.password">
        </div>
        <button class="active-btn" ng-disabled="loginForm.$invalid" type="submit">Sign In</button>
        <button class="inactive-btn" type="button" ng-click="forgottenPassword(loginForm)">Forgot Password?</button>
    </form>
</div>
<span class="dialog-error-bar-bottom" ng-show="displayError">{{displayError}}</span>