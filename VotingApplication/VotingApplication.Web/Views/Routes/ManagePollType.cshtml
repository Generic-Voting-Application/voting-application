<div ng-app="GVA.Creation" ng-controller="ManagePollTypeController">
    <div class="manage-area centered">
        <h2>The Style</h2>
        <h3>How will the voters vote?</h3>

        <div class="manage-section">
            <div class="inactive-btn btn-large clickable poll-type-btn" ng-class="{'active-btn' : poll.VotingStrategy=='Basic'}" ng-click="updateStrategy('Basic')">
                <span class="pull-left">
                    <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                    <span class="poll-type-text">Single Vote</span>
                </span>
            </div>
        </div>

        <div class="manage-section">
            <div class="inactive-btn btn-large clickable poll-type-btn" ng-class="{'active-btn' : poll.VotingStrategy=='Multi'}" ng-click="updateStrategy('Multi')">
                <span class="pull-left">
                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                    <span class="poll-type-text">Multi Vote</span>
                </span>
            </div>
        </div>

        <div class="manage-section">
            <div class="inactive-btn btn-large clickable poll-type-btn" ng-class="{'active-btn' : poll.VotingStrategy=='UpDown'}" ng-click="updateStrategy('UpDown')">
                <span class="pull-left">
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                    <span class="poll-type-text">Up/Down Vote</span>
                </span>
            </div>
        </div>

        <div class="manage-section">
            <div class="poll-type-btn-extended" ng-class="{'selected':poll.VotingStrategy=='Points'}">
                <div class="inactive-btn btn-large clickable poll-type-btn" ng-class="{'active-btn' : poll.VotingStrategy=='Points'}" ng-click="updateStrategy('Points')">
                    <span class="pull-left">
                        <span class="glyphicon glyphicon-tasks" aria-hidden="true"></span>
                        <span class="poll-type-text">Points vote</span>
                    </span>
                </div>
                <div class="content">
                    <div class="pull-left text-centered">
                        <small>Points per poll</small><br />
                        <span class="btn-group-points" ng-class="{'selected':poll.VotingStrategy=='Points'}">
                            <button class=" active-btn pull-left" ng-disabled="!canDecrementMP()" ng-click="(poll.MaxPoints = poll.MaxPoints - 1)">
                                -
                            </button>
                            <label class="points-label text-centered">{{poll.MaxPoints}}</label>
                            <button class="active-btn pull-right" ng-disabled="!canIncrementMP()" ng-click="(poll.MaxPoints = poll.MaxPoints + 1)">
                                +
                            </button>
                        </span>
                    </div>
                    <div class="pull-right text-centered">
                        <small>Points per vote</small><br />
                        <span class="btn-group-points" ng-class="{'selected':poll.VotingStrategy=='Points'}">
                            <button class=" active-btn pull-left" ng-disabled="!canDecrementMPV()" ng-click="(poll.MaxPerVote = poll.MaxPerVote - 1)">
                                -
                            </button>
                            <label class="points-label text-centered">{{poll.MaxPerVote}}</label>
                            <button class="active-btn pull-right" ng-disabled="!canIncrementMPV()" ng-click="(poll.MaxPerVote = poll.MaxPerVote + 1)">
                                +
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="manage-section">
            <button class="manage-btn" ng-click="return()">Cancel</button>
            <button class="manage-btn" ng-click="updatePoll()">Save</button>
        </div>
    </div>
</div>
