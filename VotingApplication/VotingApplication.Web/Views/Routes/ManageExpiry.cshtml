<div ng-app="GVA.Creation" ng-controller="ManageExpiryController">
    <div class="manage-area centered">
        <h2>
            Poll Expiry
        </h2>
        <h3>
            When will the poll end?
        </h3>
        <div class="manage-section text-centered">
            <em>{{formatExpiry()}}</em>
        </div>
        <div class="manage-section">
            <date-picker ng-model="poll.ExpiryDate" filter="dateFilter" />
        </div>
        <div class="manage-section">
            <time-picker ng-model="poll.ExpiryDate" debounce="1000"/>
        </div>
        <h3>
            Fast choices
        </h3>
        <div class="manage-section">
            <div class="interlocked-btn-group">
                <button id="hour-adjust-button" class="inactive-btn" ng-click="setDate('hour');" ng-class="{'active-btn': timeOffset()=='hour'}">1 Hour</button>
                <button id="day-adjust-button" class="inactive-btn" ng-click="setDate('day');" ng-class="{'active-btn': timeOffset()=='day'}">1 Day</button>
                <button id="week-adjust-button" class="inactive-btn" ng-click="setDate('week');" ng-class="{'active-btn': timeOffset()=='week'}">1 Week</button>
                <button id="never-adjust-button" class="inactive-btn" ng-click="removeExpiry();" ng-class="{'active-btn': !poll.ExpiryDate}">Never</button>
            </div>
        </div>

        <div class="manage-section">
            <button id="cancel-button" class="manage-btn" ng-click="return()">Cancel</button>
            <button id="save-button" class="manage-btn" ng-click="updatePoll()">Save</button>
        </div>
    </div>
</div>
