<div class="account-register centered">
    <form name="registerForm" ng-submit="registerAccount(registerForm)">
        <div class="form-section-block centered">
            <label for="email-input">Email</label>
            <input autofocus required class="form-input" type="email" name="email-input" id="email-input" placeholder="user@example.com" ng-model="registerForm.email">

            <label for="email-input">Password</label>
            <input type="password" required class="form-input" name="password-input" id="password-input" placeholder="Password" ng-model="registerForm.password">
        </div>
        <button class="active-btn" ng-disabled="registerForm.$invalid" type="submit">Register</button>
    </form>
</div>
