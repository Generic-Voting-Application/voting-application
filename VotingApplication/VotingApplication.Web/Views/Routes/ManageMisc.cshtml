<div ng-app="GVA.Creation" ng-controller="ManageMiscController">
    <div class="manage-area centered">
        <h2>Poll Invitation Style</h2>
        <div class="manage-section">
            <div>
                <form class="form-section-block">
                    <label for="InviteOnly">Voters require an invite to vote</label>
                    <toggle-switch id="InviteOnly" ng-model="poll.InviteOnly" on-label="Yes" off-label="No"></toggle-switch>
                    <small ng-if="poll.InviteOnly">Voters may only submit a vote if invited</small>
                    <small ng-if="!poll.InviteOnly">Anyone with a link to the poll can vote</small>
                </form>
            </div>
        </div>
        <div class="manage-section">
            <div>
                <form class="form-section-block">
                    <label for="NamedVoting">Voters must give a name to vote</label>
                    <toggle-switch id="NamedVoting" ng-model="poll.NamedVoting" on-label="Yes" off-label="No"></toggle-switch>
                    <small ng-if="poll.NamedVoting">Voters are required to supply a name when voting</small>
                    <small ng-if="!poll.NamedVoting">All votes are anonymous</small>
                </form>
            </div>
        </div>
        <div class="manage-section">
            <div>
                <form class="form-section-block">
                    <label for="OptionAdding">Voters can add their own options</label>
                    <toggle-switch id="OptionAdding" ng-model="poll.OptionAdding" on-label="Yes" off-label="No"></toggle-switch>
                    <small ng-if="poll.OptionAdding">Voters can add their own options to the poll</small>
                    <small ng-if="!poll.OptionAdding">Voters cannot add their own options to the poll</small>
                </form>
            </div>
        </div>
        <div class="manage-section">
            <div>
                <form class="form-section-block">
                    <label for="HiddenResults">Results are hidden until a voter has voted</label>
                    <toggle-switch id="HiddenResults" ng-model="poll.HiddenResults" on-label="Yes" off-label="No"></toggle-switch>
                    <small ng-if="poll.HiddenResults">Voters can not see the results until they have cast a vote</small>
                    <small ng-if="!poll.HiddenResults">Voters can see results at any time</small>
                </form>
            </div>
        </div>

        <div class="manage-section">
            <button class="manage-btn" ng-click="return()">Cancel</button>
            <button class="manage-btn" ng-click="updatePoll()">Save</button>
        </div>
    </div>
</div>




