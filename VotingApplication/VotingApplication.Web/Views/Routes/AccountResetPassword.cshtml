<div ng-controller="AccountResetPasswordController">
    <div>
        <h2>Reset password?</h2>
    </div>
    <form ng-submit="resetPassword(loginForm)" name="loginForm" class="ng-invalid ng-invalid-required ng-dirty ng-valid-email">
        <div class="form-section-block centered">
            <label for="email">Email</label>
            <input readonly class="form-input" type="email" id="email" placeholder="user@example.com" ng-model="email">

            <label for="password">Password</label>
            <input type="password" autofocus required class="form-input" id="password" placeholder="Password" ng-model="loginForm.password">
            <span class="form-error" ng-show="registerForm.errors">{{loginForm.errors.password}}</span>

            <label for="confirmpassword">Confirm Password</label>
            <input type="password" required class="form-input" id="confirmpassword" placeholder="Password" ng-model="loginForm.confirmpassword">
            <span class="form-error" ng-show="registerForm.errors">{{loginForm.errors.confirmpassword}}</span>
        </div>
        <button type="submit" ng-disabled="loginForm.$invalid" class="active-btn">Reset</button>
    </form>
</div>
