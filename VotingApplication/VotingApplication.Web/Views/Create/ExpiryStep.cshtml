<div layout="row">

    <div flex-gt-md="60" flex-md="80" flex-sm="90"
         offset-gt-md="20" offset-md="10" offset-sm="5">

        <h1 class="md-display-3">Poll Expiry</h1>

        <md-content layout="row" layout-align="center center">
            <time-date-picker ng-model="newPoll.ExpiryDateUtc" ng-disabled="!newPoll.Expires" display-twentyfour="true" display-mode="full"></time-date-picker>
        </md-content>

        <md-content>
            <div layout="row">
                <md-checkbox ng-model="newPoll.Expires" aria-label="Poll expires">
                    Poll expires
                </md-checkbox>
            </div>
        </md-content>

        <md-content layout-padding>
            <div layout="row">
                <md-button class="md-raised md-primary" ng-click="advanceToStep(4)">Next <i class="fa fa-chevron-right"></i></md-button>
            </div>
        </md-content>
    </div>

</div>