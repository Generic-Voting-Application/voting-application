<div layout="row">

    <div flex-gt-md="60" flex-md="80" flex-sm="90"
         offset-gt-md="20" offset-md="10" offset-sm="5">

        <h1 class="md-display-3">Poll Question</h1>

        <form name="pollQuestionForm">
            <md-content layout-padding>

                <md-input-container class="md-display-1">
                    <label>What do you want to ask?</label>
                    <input required type="text" name="question" ng-model="newPoll.Name">
                </md-input-container>

            </md-content>

            <md-content layout-padding>

                <div layout="column">

                    <div layout="row" layout-fill>
                        <div flex="75">
                            <md-input-container>
                                <label>Choice 1</label>
                                <input type="text">
                            </md-input-container>
                        </div>
                    </div>

                    <div layout="row" layout-fill>
                        <div flex="75">
                            <md-input-container>
                                <label>Choice 2</label>
                                <input type="text">
                            </md-input-container>
                        </div>
                    </div>


                    <div layout="row" layout-fill>
                        <div flex="75">
                            <md-input-container>
                                <label>Choice 3</label>
                                <input type="text">
                            </md-input-container>
                        </div>
                    </div>
                </div>

                <div layout="row">
                    <md-button class="md-raised md-primary" ng-disabled="pollQuestionForm.$invalid" ng-hide="loading" ng-click="loading=!loading">Create Quick Poll</md-button>
                    <md-button class="md-raised md-primary" ng-disabled="pollQuestionForm.$invalid" ng-hide="loading" ng-click="loading=!loading">Customise Poll <i class="fa fa-chevron-right"></i></md-button>
                    <md-progress-linear md-mode="indeterminate" ng-show="loading"></md-progress-linear>
                </div>

            </md-content>

        </form>
    </div>

</div>