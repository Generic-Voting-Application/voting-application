<!DOCTYPE html>
<html ng-app="VoteOn-Create" ng-controller="CreateController">
<head>
    <title>Vote On</title>
    <meta name="viewport" content="initial-scale=1">

    @Styles.Render("~/Bundles/StyleLib/AngularMaterial")
    @Styles.Render("~/Bundles/StyleLib/AngularDateTime")
    @Styles.Render("~/Bundles/StyleLib/FontAwesome")
    @Styles.Render("~/Bundles/AngularMaterialExtensions")
    @Styles.Render("~/Bundles/VoteOnStyle")

</head>
<body>

    <div layout="column" flex layout-fill>

        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2>
                    <span>Vote On</span>
                </h2>
                <span flex></span>
                <div>
                    <div hide-gt-sm>
                        <md-menu md-position-mode="target-right target">
                            <md-button class="md-icon-button" ng-click="$mdOpenMenu()" aria-label="Open menu menu">
                                <md-icon md-font-icon="fa-bars fa-2x" class="fa"></md-icon>
                            </md-button>
                            <md-menu-content width="2">
                                <md-menu-item>
                                    <md-button>
                                        <md-icon md-font-icon="fa-sign-in" class="fa fa-lg" md-menu-align-target></md-icon>
                                        Log in
                                    </md-button>
                                </md-menu-item>
                                <md-menu-item>
                                    <md-button ng-click="register()">
                                        <md-icon md-font-icon="fa-user" class="fa fa-lg" md-menu-align-target></md-icon>
                                        Register
                                    </md-button>
                                </md-menu-item>
                            </md-menu-content>
                        </md-menu>
                    </div>

                    <div hide-sm>
                        <md-button>Log in</md-button>
                        <md-button ng-click="register()">Register</md-button>
                    </div>

                </div>
            </div>
        </md-toolbar>

        <md-content md-theme="default" class="md-whiteframe-z2">
            @*md-center-tabs Should be true. This is a stupid IE Bug*@
            @*https://github.com/angular/material/issues/2391*@
            <md-tabs md-center-tabs="false" md-dynamic-height="true" md-selected="currentStep" class="md-accent">
                <md-tab ng-repeat="step in steps" ng-disabled="step.locked">
                    <md-tab-label>{{step.label}}</md-tab-label>
                    <md-tab-body>
                        <ng-include src="step.content"></ng-include>
                    </md-tab-body>
                </md-tab>
            </md-tabs>
        </md-content>
    </div>

    @Scripts.Render("~/Bundles/ScriptLib/Moment")
    @Scripts.Render("~/Bundles/ScriptLib/Angular")
    @Scripts.Render("~/Bundles/ScriptLib/AngularAnimate")
    @Scripts.Render("~/Bundles/ScriptLib/AngularAria")
    @Scripts.Render("~/Bundles/ScriptLib/AngularMaterial")
    @Scripts.Render("~/Bundles/ScriptLib/AngularMessages")
    @Scripts.Render("~/Bundles/ScriptLib/AngularDateTime")

    @Scripts.Render("~/Bundles/Script")
</body>
</html>