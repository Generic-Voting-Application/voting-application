<!DOCTYPE html>
<html ng-app="GVA.Creation" ng-controller="CreatePageController as parent">
<head>
    <title>Pollster</title>
    @Styles.Render("~/Bundles/StyleLib")
    @Styles.Render("~/Bundles/CreateStyle")
    <meta name="viewport" content="initial-scale=1">
</head>
<body>
    <div class="center-panel">
        <div class="body-content">
            <div>
                <span class="pull-right" id="signin-header">
                    <span ng-show="!account"><a href="#" ng-click="openLoginDialog()">Sign In</a></span>
                    <span ng-show="account">{{account.email}}</span>
                    <i class="glyphicon glyphicon-user"></i>
                    <i class="glyphicon glyphicon-chevron-down"></i>
                </span>
                <div class="clear"></div>
                <ng-include ng-if="!account" src="'/Routes/BasicCreate'"></ng-include>
                <ng-include ng-if="account" src="'/Routes/AdvancedCreate'"></ng-include>
            </div>
        </div>
        <div id="footer"><a href="mailto:generic.voting@gmail.com">Contact us</a> | © 2015 – Scott Logic Ltd</div>
    </div>
    @Scripts.Render("~/Bundles/ScriptLib")
    @Scripts.Render("~/Bundles/Script")
</body>
</html>
