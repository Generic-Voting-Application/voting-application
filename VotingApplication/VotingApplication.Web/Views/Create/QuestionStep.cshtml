<div layout="row" ng-controller="QuestionStepController">

    <div flex-gt-md="60" flex-md="80" flex-sm="90"
         offset-gt-md="20" offset-md="10" offset-sm="5">

        <h1 class="md-display-3">Poll Question</h1>

        <form name="pollQuestionForm">
            <md-content layout-padding>

                <md-input-container class="md-display-1">
                    <label>What do you want to ask?</label>
                    <input required type="text" name="PollName" ng-model="newPoll.PollName">
                </md-input-container>

            </md-content>

            <md-content layout-padding>

                <div layout="column">
                    <div layout="row" layout-fill ng-repeat="choice in newPoll.Choices">
                        <div flex="70">
                            <md-input-container>
                                <label>Choice {{$index + 1}}</label>
                                <input type="text" ng-model="choice.Name" ng-change="choiceChange($index)">
                            </md-input-container>
                        </div>
                        <div flex="5">
                            <md-button class="md-icon-button vo-button-margin-top"
                                       type="button"
                                       tabindex="{{$index+1}}"
                                       aria-label="delete"
                                       ng-show="choice.Name"
                                       ng-click="removeChoice($index)">
                                <md-icon md-font-icon="fa-times" class="fa md-accent" alt="delete"></md-icon>
                            </md-button>
                        </div>
                    </div>
                </div>

            </md-content>

            <md-content layout-padding>
                <div layout="row">
                    <md-checkbox ng-model="newPoll.ChoiceAdding" aria-label="Voters may add choices">
                        Voters may add choices
                    </md-checkbox>
                </div>
            </md-content>

            <md-content layout-padding>
                <div layout="row">
                    <md-button class="md-raised md-primary"
                               ng-click="advanceToStep(5)">
                        Finish
                    </md-button>
                    <md-button class="md-raised md-primary"
                               ng-click="advanceToStep(2)">
                        Style
                        <i class="fa fa-chevron-right"></i>
                    </md-button>
                </div>
            </md-content>

        </form>
    </div>
</div>