<div layout="row">

    <div flex-gt-md="60" flex-md="80" flex-sm="90"
         offset-gt-md="20" offset-md="10" offset-sm="5">

        <h1 class="md-display-3">Poll Style</h1>

        <md-content layout="row" layout-align="space-around center" layout-padding>
            <md-button class="md-raised" ng-class="{'md-primary' : newPoll.PollType=='Basic'}" ng-click="newPoll.PollType='Basic'">
                <span class="md-display-1">Basic</span>
            </md-button>
            <md-button class="md-raised" ng-class="{'md-primary' : newPoll.PollType=='Multi'}" ng-click="newPoll.PollType='Multi'">
                <span class="md-display-1">Multi</span>
            </md-button>
            <md-button class="md-raised" ng-class="{'md-primary' : newPoll.PollType=='UpDown'}" ng-click="newPoll.PollType='UpDown'">
                <span class="md-display-1">Up/Down</span>
            </md-button>
            <md-button class="md-raised" ng-class="{'md-primary' : newPoll.PollType=='Points'}" ng-click="newPoll.PollType='Points'">
                <span class="md-display-1">Points</span>
            </md-button>
        </md-content>

        <md-content layout="column" layout-padding>

            Poll description

            <div layout="row">
                <md-button class="md-raised md-primary" ng-click="advanceToStep(3)">Next <i class="fa fa-chevron-right"></i></md-button>
            </div>
        </md-content>

    </div>

</div>