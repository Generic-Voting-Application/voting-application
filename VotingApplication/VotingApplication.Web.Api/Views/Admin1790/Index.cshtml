<div class="jumbotron">
    <h1>Lunchtime Voting</h1>
</div>
<div class="row" id="sessions">
    <div class="col-xs-4"></div>
    <div class="col-xs-3 centered">
        <label for="session-select">Session</label>
        <br />
        <select id="session-select" data-bind="options: sessions, optionsText: 'Name', optionsValue: 'Id'" style="width:100%"></select>
        <br />
        <br />
        <button type="submit" class="btn btn-primary" data-bind="click: $root.submitSession.bind()">Go</button>
    </div>
    <div class="col-xs-5"></div>
</div>
<div id="admin-panel" hidden>
    <div class="row">
        <div class="col-xs-5"></div>
        <div class="col-xs-2">
            <button id="reset-votes" style="width:100%; height:40px">Reset Vote</button>
        </div>
        <div class="col-xs-5"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-6 centered">
            <table class="table">
                <tr>
                    <th>User</th>
                    <th>Option</th>
                    <th></th>
                </tr>
                <tbody data-bind="foreach: votes">
                    <tr>
                        <td data-bind="text: User.Name"></td>
                        <td data-bind="text: Option.Name"></td>
                        <td><button data-bind="click: $parent.deleteVote.bind()">Delete Vote</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>
