<div class="jumbotron">
    <h1>Lunchtime Voting</h1>
</div>
<div class="row">
    <div class="col-xs-5"></div>
    <div class="col-xs-2">
        <button class="btn btn-primary" id="reset-votes" style="width:100%; height:40px">Reset Vote</button>
    </div>
    <div class="col-xs-5"></div>
</div>
<br />
<div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6 centered">
        <table class="table">
            <tr>
                <th>User</th>
                <th>Option</th>
                <th></th>
            </tr>
            <tbody data-bind="foreach: votes">
                <tr>
                    <td data-bind="text: User.Name"></td>
                    <td data-bind="text: Option.Name"></td>
                    <td><button class="btn btn-danger" data-bind="click: $parent.deleteVote.bind()">Delete Vote</button></td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <tr>
                <th>Option</th>
                <th></th>
            </tr>
            <tbody data-bind="foreach: options">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td><button class="btn btn-danger" data-bind="click: $root.showDeleteModal.bind()" data-toggle="modal" data-target="#deleteOptionModal">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="deleteOptionModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Confirm delete</h4>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this option?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" data-bind="click: $root.deleteOption.bind()" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-3"></div>
</div>
