<div class="jumbotron">
    <h1>Lunchtime Voting</h1>
</div>
<div class="row">
    <div class="col-xs-5"></div>
    <div class="col-xs-2">
        <button class="btn btn-primary" id="reset-votes" style="width:100%; height:40px">Reset Vote</button>
    </div>
    <div class="col-xs-5"></div>
</div>
<br />
<div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6 centered">
        <table class="table">
            <tr>
                <th>User</th>
                <th>Option</th>
                <th></th>
            </tr>
            <tbody data-bind="foreach: votes">
                <tr>
                    <td data-bind="text: User.Name"></td>
                    <td data-bind="text: Option.Name"></td>
                    <td><button class="btn btn-danger" data-bind="click: $parent.deleteVote.bind()">Delete Vote</button></td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <tr>
                <th>Option</th>
                <th></th>
            </tr>
            <tbody data-bind="foreach: options">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td><button class="btn btn-danger" data-bind="click: $root.deleteOption.bind()" data-toggle="modal" data-target="#deleteOptionModal">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-xs-3"></div>
</div>
