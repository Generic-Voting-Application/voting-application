<div class="jumbotron">
    <h1 data-bind="text: sessionName"></h1>
</div>
<div class="row">
    <div id="vote-table" hidden>
        <div class="col-xs-3"></div>
        <div class="col-xs-6 centered">
            <table id="inner-vote-table" class="table table-hover">
                <thead>
                    <tr>
                        <th>Option</th>
                        <th>Description</th>
                        <th>More info</th>
                        <th>Vote</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: options">
                    <tr>
                        <td data-bind="text: Name"></td>
                        <td data-bind="text: Description"></td>
                        <td data-bind="text: Info"></td>
                        <td><button class="btn btn-primary" data-bind="click: $parent.doVote.bind()">Vote</button></td>
                    </tr>
                </tbody>
                <tr id="newOptionRow">
                    <form>
                        <td><input class="form-control" id="newName" placeholder="Option" /></td>
                        <td><input class="form-control" id="newDescription" placeholder="Description" /></td>
                        <td><input class="form-control" id="newInfo" placeholder="More Info" /></td>
                        <td><button class="btn btn-primary" data-bind="click: $root.addOption.bind()">Add Option</button></td>
                    </form>
                </tr>
            </table>
            <button class="btn btn-primary" data-bind="click: $root.viewResults">View Results</button>
        </div>
        <div class="col-xs-3"></div>
    </div>
</div>